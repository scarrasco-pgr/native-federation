{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "newProjectRoot": "projects",
  "projects": {
    "shell": {
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "configurations": {
            "development": {
              "dev": true,
              "target": "shell:esbuild:development"
            },
            "production": {
              "target": "shell:esbuild:production"
            }
          },
          "defaultConfiguration": "production",
          "options": {
            "styles": ["src/custom-theme.scss"]
          }
        },
        "esbuild": {
          "builder": "@angular-devkit/build-angular:application",
          "configurations": {
            "development": {
              "extractLicenses": false,
              "optimization": false,
              "sourceMap": true
            },
            "production": {
              "budgets": [
                {
                  "maximumError": "1MB",
                  "maximumWarning": "500kB",
                  "type": "initial"
                },
                {
                  "maximumError": "4kB",
                  "maximumWarning": "2kB",
                  "type": "anyComponentStyle"
                }
              ],
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "production",
          "options": {
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "browser": "src/main.ts",
            "index": "src/index.html",
            "inlineStyleLanguage": "scss",
            "outputPath": "dist/shell",
            "polyfills": ["zone.js", "es-module-shims"],
            "scripts": [],
            "styles": [
              "src/styles.scss",
              "@angular/material/prebuilt-themes/azure-blue.css"
            ],
            "tsConfig": "tsconfig.app.json"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "dev": true,
            "port": 0,
            "rebuildDelay": 0,
            "target": "shell:serve-original:development"
          }
        },
        "serve-original": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "development": {
              "buildTarget": "shell:esbuild:development"
            },
            "production": {
              "buildTarget": "shell:esbuild:production"
            }
          },
          "defaultConfiguration": "development",
          "options": {
            "port": 4200
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "inlineStyleLanguage": "scss",
            "polyfills": ["zone.js", "zone.js/testing"],
            "scripts": [],
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "src/styles.scss"
            ],
            "tsConfig": "tsconfig.spec.json"
          }
        }
      },
      "prefix": "app",
      "projectType": "application",
      "root": "",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "sourceRoot": "src"
    }
  },
  "version": 1
}
